//1 - Escrever um algoritmo que leia 3 valores a,b,c. Calcule e escreva a média ponderada com //
//pesos = 5 para números acima de 6 e peso = 2,5 para números abaixo de 6.//
 #include <stdio.h>
 int main ()
 {
 float a, b ,c, mp, x, y, z;

 printf ("Informe o valor a \n");
 scanf ("%f", &a);
 
 printf ("Informe o valor b \n");
 scanf ("%f", &b);
 
 printf ("Informe o valor c \n");
 scanf ("%f", &c);
 
 if (a >=6) 
  x=5;
 else 
  {
    x = 2,5;
  }
 if (b >=6) 
  y=5;
 else 
    {
     y = 2,5;
    }
 if (c >=6) 
  z=5;
 else 
   {
    z = 2,5;
   }
mp = (a*x+b*y+c*z)/(x+y+z);
printf ("Media final = %f", mp);
return 0;
 }
