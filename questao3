//Faça um programa que calcule o fatorial de um número informado pelo usuário. 
//Obs: O fatorial de 0 é 1.
#include <stdio.h>
int main ()
{
  int num, i;
  int fat = 1;
  
  printf ("Insira um número: ");
  scanf ("%d", &num);
   
  if (num < 0)
  {
    printf ("Operação inválida, tente novamente");
  }
  else 
  {
    for (i=1; i<=num; i++)
    {
     fat = fat * i;
    }
   printf ("Número em valor fatorial: %d", fat);
  }
  return 0;
}
