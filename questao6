//Dado um número natural na base decimal, transformá-lo para a base binária.

#include <stdio.h>
int main() {
    int dec;
    printf("Informe um valor decimal\n");
    scanf("%d", &dec);

    int binario[32]; 
    int i = 0;
    
    while (dec > 0) {
        binario[i] = dec % 2;
        dec = dec / 2;
        i++;
    }
    printf("Número em binário: ");
    for (int j = i - 1; j >= 0; j--) {
        printf("%d", binario[j]);
    }
    printf("\n");

    return 0;
}
